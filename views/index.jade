extends layout

block content

    .container#mapContainer
        .row#buttonRow
            .col-sm-1
            .col-sm-3

                .input-group#findAddress
                    input#address.form-control(type='text', name='username', placeholder='Search')
                    span.input-group-btn
                        button#findButton.btn.btn-default.btn(type='submit').glyphicon.glyphicon-search

            .col-sm-3
                .input-group#findYear
                    span.input-group-btn
                        button#backButton.btn.btn-default(type='submit').glyphicon.glyphicon-minus
                    select#yearList.form-control
                    span.input-group-btn
                        button#forwardButton.btn.btn-default(type='submit').glyphicon.glyphicon-plus
            .col-sm-3
                .input-group#showGP
                    span.input-group-btn
                        button#gpButton.btn.btn-default.btn(type='submit') Show GP Surgeries
                    span.input-group-btn
                        button#hideButton.btn.btn-default.btn(type='submit').glyphicon.glyphicon-remove

            .col-sm-2

        .mapCanvas
        .loading
